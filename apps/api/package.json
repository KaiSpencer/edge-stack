{
  "name": "@full-stack-cloudflare/api",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev src/index.ts --port 3001",
    "deploy": "wrangler deploy --minify src/index.ts",
    "generate": "drizzle-kit generate:sqlite",
    "up": "drizzle-kit up:sqlite",
    "migrate:local": "wrangler d1 migrations apply full-stack-cloudflare-db --local",
    "migrate:test": "wrangler d1 migrations apply full-stack-cloudflare-db-test --local --persist-to=./test/temp-d1-db --env test",
    "migrate": "wrangler d1 migrations apply full-stack-cloudflare-db",
    "test": "vitest",
    "clean-test-db": "wrangler d1 execute full-stack-cloudflare-db-test --local --env test --file=./test/clean-test-db.sql --persist-to=./test/temp-d1-db",
    "seed-test-db": "wrangler d1 execute full-stack-cloudflare-db-test --local --env test --file=./test/seed-test-db.sql --persist-to=./test/temp-d1-db",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --apply-unsafe",
    "typecheck": "tsc --project ./tsconfig.json"
  },
  "dependencies": {
    "drizzle-orm": "^0.29.3",
    "hono": "^4.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@cloudflare/workers-types": "^4.20240129.0",
    "@types/bun": "^1.0.5",
    "drizzle-kit": "^0.20.14",
    "vitest": "^1.3.0",
    "wrangler": "^3.25.0"
  }
}
